{
  "name": "restful-pdf-lib",
  "version": "0.1.0",
  "description": "REST API web service for PDF manipulation using pdf-lib.js",
  "main": "dist/functions.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc --sourceMap false --declaration false",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t restful-pdf-lib .",
    "docker:run": "docker run -p 3000:3000 -e API_SECRET=your-secret-here restful-pdf-lib",
    "func:start": "npm run build && npx func start",
    "func:build": "npm run build:prod && npx func extensions install",
    "func:deploy": "npm run build:prod && npx func azure functionapp publish",
    "func:dev": "npm run build:watch & npx func start"
  },
  "keywords": [
    "pdf",
    "pdf-lib",
    "rest-api",
    "express",
    "typescript",
    "azure"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/functions": "^4.9.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "multer": "^2.0.2",
    "pdf-lib": "^1.17.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-openapi": "^0.14.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
